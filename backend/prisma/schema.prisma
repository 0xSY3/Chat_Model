generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Application {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  status      String
  description String
  url         String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Binaries {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  status      String
  description String
  url         String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Plugin {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  description String
  url         String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Api {
  id          Int      @id @default(autoincrement())
  category    String
  description String
  url         String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Compute {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  duration    String
  description String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
